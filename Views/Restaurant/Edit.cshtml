@model RestaurantRaterMVC.Models.Restaurant.RestaurantEdit

@{
    string title = "Edit" + Model.Name;
    ViewData["Title"] = title;
}

<h1>@title</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                @Html.DisplayNameFor(r => r.Id)
                @Html.DisplayFor(r => r.Id)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(r => r.Name)
                @Html.EditorFor(r => r.Name);
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(r => r.Location)
                @Html.EditorFor(r => r.Location);
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

